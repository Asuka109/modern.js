{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "src",
    "plugins",
    "exports",
    "shared",
    "config",
    "modern.config.ts",
    "panda.config.ts",
    "styled-system"
  ],
  "exclude": ["**/node_modules"]
}
